@model List<TLS_Ecommercial_Demo_Entity.Entities.Dtos.CustomerDto>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Customer List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>Customer List</h2>

        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Customer Name</th>
                    <th></th>
                    <th></th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerName</td>
                        <td>
                            <a href="/Customer/Update/@customer.CustomerId" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </td>
                        <td>
                            <a href="/Customer/Delete/@customer.CustomerId" class="btn btn-danger">
                                <i class="fas fa-edit"></i> Delete
                            </a>
                        </td>
                        <td>
                            <a href="/Customer/CustomerAddress/@customer.CustomerId" class="btn bg-success">
                                <i class="fas fa-edit"></i> Addresses
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <h3 class="mt-4">Add Customer</h3>
        <form method="post" action="/Customer/Add">
            <div class="form-group">
                <label for="CustomerName">Customer Name:</label>
                <input type="text" class="form-control" name="CustomerName" required />
            </div>


            <button type="submit" class="btn btn-success">Add Product</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    <script>
        function deleteCustomer(customerId) {
  
            alert('Delete customer with ID ' + customerId);
        }
    </script>
</body>
</html>